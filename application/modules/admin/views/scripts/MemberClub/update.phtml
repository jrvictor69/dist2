<div id="dialog-form" title="<?php echo $this->translate('Edit Directive'); ?>" class="header" style="display: none;">
	<?php echo $this->form;?>
</div>

<script type="text/javascript">
$(document).ready(function() {
	var result = $('#result'),
		load = function (e) {
		e = e.originalEvent;
		e.preventDefault();
		window.loadImage(
			(e.dataTransfer || e.target).files[0],
			function (img) {
				result.children().replaceWith(img);
			},
			{
			maxWidth: result.children().outerWidth(),
			canvas: true
			}
		);
	};

	$('#file-input').change(load);
});

com.em.MemberClub.prototype.dialogButtons = {
	'<?php echo $this->translate('Edit'); ?>': function() {
		$('#formId').submit();
	},

	'<?php echo $this->translate('Cancel'); ?>': function() {
		$(this).dialog("close");
	}
};
</script>